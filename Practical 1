------------------------------{3}-----------------------------------------
fun main() {
		var a = 5
		var b = 10
		if(a > b){
			print("Number 5 is larger than 10")
		}
		else{
			println("Number 10 is larger than 5")
		}
	}
-----------------------------{end}----------------------------------------

